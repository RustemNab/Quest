<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.questqazan.androidprojectv2.GameInterfaceActivity"
    android:background="@color/colorDarkBackground">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="172dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:srcCompat="@color/colorDarkPanel" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="352dp"
        android:layout_height="236dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@color/colorDarkPanel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="172dp"
        android:layout_height="220dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@color/colorDarkPanel" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="352dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="91dp"
        android:layout_height="230dp"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:srcCompat="@drawable/tower"
        app:layout_editor_absoluteX="54dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="172dp"
        android:layout_height="181dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/suyumbike" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="172dp"
        android:layout_height="181dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:srcCompat="@drawable/grozny" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text='"Башня Сююмбике"'
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="Об игре. Пловпрвыалдопрдвыалопрлвыаопролываплвыаопрывоплырвалдпоырвалдпрвы"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Задания"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        android:textSize="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вопросы"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        android:textSize="21dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:30"
        android:textColor="@color/colorWhite"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="0.5" />

    <Space
        android:id="@+id/go_questions"
        android:layout_width="172dp"
        android:layout_height="220dp"
        app:layout_constraintRight_toRightOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <Space
        android:id="@+id/go_tasks"
        android:layout_width="172dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintRight_toRightOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="172dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/banner"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:layout_constraintLeft_toLeftOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="172dp"
        android:layout_height="39dp"
        app:srcCompat="@drawable/banner"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintLeft_toLeftOf="@+id/imageView8" />

</android.support.constraint.ConstraintLayout>
